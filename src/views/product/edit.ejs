<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partial/style') %>
</head>
<body>
<%- include ('../partial/sideBar') %>
<div class="container-fluid">
    <main class="tm-main">
        <center>
            <form action="" class="mb-5 tm-comment-form" method="post" enctype="multipart/form-data">
                <h1 class="tm-color-primary tm-post-title mb-4" style="color: red">Edit Product</h1>
                <hr class="tm-hr-primary">
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Name</h5>
                    <input class="form-control" name="name" type="text" value="<%= product[0].name %>" required>
                </div>
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Price</h5>
                    <input class="form-control" name="price" type="number" value="<%= product[0].price %>" required>
                </div>
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Quantity</h5>
                    <input class="form-control" name="quantity" type="number" value="<%= product[0].quantity %>"
                           required>
                </div>
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Image</h5>
                    <input class="form-control" name="image" type="file" required>
                </div>
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Description</h5>
                    <input class="form-control" name="description" type="text" rows="6"
                           value="<%= product[0].description %>"
                           required>
                </div>
                <div class="mb-4"><h5 class="tm-color-primary tm-post-title mb-4">Category</h5>
                    <select name="idCategory" class="form-control" required>
                        <option value="" disabled selected
                                style="background-color: gray"><%= product[0].nameC %></option>
                        <% for (let i = 0; i < listCategory.length; i++) { %>
                            <option value="<%= listCategory[i].idC %>"><%= listCategory[i].nameC %></option>
                        <% } %>
                    </select>
                </div>
                <div class="text-right">
                    <center>
                        <button class="tm-btn tm-btn-primary tm-btn-small" type="submit">Submit</button>
                    </center>
                </div>
            </form>
            <div class="text-right">
                <center>
                    <a href="/products">
                        <button class="tm-btn tm-btn-primary tm-btn-small" style="padding: 8px 49px">Exit</button>
                    </a>
                </center>
            </div>
        </center>
    </main>
</div>
<%- include ('../partial/javascript') %>
</body>
</html>